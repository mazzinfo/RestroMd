<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomStatusActivity">

    <android.support.v7.widget.Toolbar

        android:id="@+id/room_status_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/room_status_grid" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/total_room_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
                android:textColor="@color/white"
                android:textStyle="bold"
            android:textSize="18dp"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>




    <GridView
        android:layout_marginTop="?attr/actionBarSize"
        android:id="@+id/room_status_grid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"

        android:layout_marginBottom="1dp"

        android:gravity="center"
        android:listSelector="#00000000"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></GridView>

